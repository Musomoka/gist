<div class="panel panel -default">
      <div class="panel-body">
            <div class="row">
              <div class="col-md-4">
                <%= image_tag  @movie.image.url(:medium)%>
              
                <div class="table-responsive">
                    <table class="table">
                      <tbody>
                        <tr>
                          <td><strong>Title:</strong></td>
                          <td><%= @movie.Title %></td>
                          
                        </tr>
                        <tr>
                          <td><strong>Desscription:</strong></td>
                          <td><%= @movie.Desscription %></td>
                          
                        </tr>
                        <tr>
                          <td><strong>Movie length:</strong></td>
                          <td><%= @movie.Movie_length %></td>
                        </tr>
                        <tr>
                          <td><strong>Director:</strong></td>
                          <td><%= @movie.Director %></td>
                        </tr>
                        
                        <tr>
                          <td><strong>Rating:</strong></td>
                          <td><%= @movie.rating %></td>
                        </tr>
                        
                      </tbody>
                    </table>
                    <p><%= link_to "Write a review", new_movie_review_path(@movie)%></p>
                </div>
               </div>
             
                  <div .col-md-7 com-md-offset-1 >
                <div class="pull-right">
                   <P><%= @movie.Desscription %> </P>
                <% if @reviews.blank? %>
                      <h3> "No Reviews as of yet, Would you like to add the first" </h3>
                    <div><%= link_to"write Review", new_movie_review_path(@movie), class: "btn btn_info" %></div>

                    <%else%>
                        <% @reviews.each do |review| %>
                        <div class="reviews"
                        <P> <%review.rating %> </p>
                        <p> <%review.comment %></p>    
                    <%end%>
                    <%end%>
                    
                </div>
            </div>
        </div>
  </div>
  </div>
  


<%= link_to 'Edit', edit_movie_path(@movie) %> |
